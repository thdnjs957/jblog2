<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<select id="getList" parameterType="string"  resultType="categoryvo">
		<![CDATA[
			select no,name,description,reg_date,blog_id as blogId from category where blog_id= #{value}	
		]]>
	</select>
	
	<insert id="insert" parameterType="categoryvo">
		<![CDATA[
			insert into category(no,name,description,reg_date,blog_id) 
			values(null,#{name},#{description},now(),#{blog_id})		
		]]>
	</insert>

</mapper>
