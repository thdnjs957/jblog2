<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="post">

	<select id="getList" parameterType="long" resultType="postvo">
		<![CDATA[
			select no,title,content,reg_date as regDate,category_no as categoryNo from post where category_no = #{value}	
		]]>
	</select>
	
	
	<select id="getByNo" parameterType="long" resultType="postvo">
		<![CDATA[
			select no,title,content,reg_date as regDate,category_no as categoryNo from post where no = #{value}
		]]>
	</select>
	
	<insert id = "insert" parameterType="postVo">
		<![CDATA[
			insert into post(no,title,content,reg_date,category_no) values(null,#{title},#{content},now(),#{categoryNo});  
		]]>
	</insert>
	

</mapper>
